@using eshop.Infrastructure.Email.ViewModels
@model UserNotificationViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Password Reset Request</title>
</head>
<body style="font-family: Arial, sans-serif; line-height: 1.6; color: #333;">
    <div style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px;">
        <h2 style="color: #0056b3; text-align: center;">Eshop Password Reset</h2>
        <p>Hi @Model.FirstName,</p>
        <p>We received a request to reset your password. Please use the following One-Time Password (OTP) to reset your password.</p>
        <div style="text-align: center; margin: 30px 0;">
            <span style="display: inline-block; font-size: 24px; font-weight: bold; letter-spacing: 5px; padding: 15px 25px; background-color: #fff3cd; border: 2px solid #ffeaa7; border-radius: 5px; color: #856404;">
                @Model.Otp
            </span>
        </div>
        <p><strong>Important:</strong> This code is valid for the next 10 minutes.</p>
        <p>If you did not request a password reset, please disregard this email and ensure your account is secure.</p>
        <hr style="border: none; border-top: 1px solid #eee; margin: 20px 0;" />
        <p style="font-size: 0.9em; color: #777;">
            Thanks,<br />
            The Eshop Team
        </p>
    </div>
</body>
</html>
