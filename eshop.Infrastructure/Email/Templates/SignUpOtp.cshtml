@using eshop.Infrastructure.Email.ViewModels
@model UserNotificationViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Your One-Time Password</title>
</head>
<body style="font-family: Arial, sans-serif; line-height: 1.6; color: #333;">
    <div style="max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px;">
        <h2 style="color: #0056b3; text-align: center;">Eshop Email Verification</h2>
        <p>Hi @Model.FirstName,</p>
        <p>Thank you for registering with us! Please use the following One-Time Password (OTP) to verify your email address.</p>
        <div style="text-align: center; margin: 30px 0;">
            <span style="display: inline-block; font-size: 24px; font-weight: bold; letter-spacing: 5px; padding: 15px 25px; background-color: #f0f0f0; border-radius: 5px;">
                @Model.Otp
            </span>
        </div>
        <p>This code is valid for the next 10 minutes.</p>
        <p>If you did not request this, please disregard this email.</p>
        <hr style="border: none; border-top: 1px solid #eee; margin: 20px 0;" />
        <p style="font-size: 0.9em; color: #777;">
            Thanks,<br />
            The Eshop Team
        </p>
    </div>
</body>
</html>