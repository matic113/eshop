{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": "Warning",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/applog-.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "",
        "Monster" : ""
    },
    "JwtOptions": {
        "SecretKey": "",
        "Issuer": "",
        "Audience": "",
        "ExpiresInMinutes": 15
    },
    "Google": {
        "ClientId": "",
        "ClientSecret": ""
    },
    "Email": {
        "FromAddress": "noreply@eshop.com", // sender email address
        "SmtpHost": "localhost", // actual smtp host
        "SmtpPort": 25,
        "SmtpEnableSsl": false,
        "SmtpUsername": "", // email
        "SmtpPassword": "" // app password
    }
}
